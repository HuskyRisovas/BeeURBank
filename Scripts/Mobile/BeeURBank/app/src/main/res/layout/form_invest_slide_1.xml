<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp">
    <!-- android:background="#4c96f6" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantos anos você tem?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textStyle="bold" />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/formInvent_rb1-1"
        android:buttonTint="@android:color/white"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text=" Até 25 anos"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/formInvent_rb1-2"
        android:buttonTint="@android:color/white"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text=" De 26 e 40 anos"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/formInvent_rb1-3"
        android:buttonTint="@android:color/white"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text=" De 41 e 64 anos"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/formInvent_rb1-4"
        android:buttonTint="@android:color/white"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text=" 65 anos ou mais"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

</RadioGroup>

</LinearLayout>