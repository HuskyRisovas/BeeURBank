<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    tools:context="com.example.mathr.burb01.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawableTint="#6699ff"
                        android:drawablePadding="12dp"
                        android:id="@+id/userName"
                        style="@style/PerfilDados"
                        android:text="@string/Nome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userIdade"
                        android:drawableStart="@drawable/ic_cake_black_24dp"
                        android:drawablePadding="12dp"
                        android:drawableTint="#6699ff"
                        style="@style/PerfilDados"
                        android:text="@string/Idade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPerfilIdade"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/black"
                        app:met_textColorHint="#FF353535"
                        android:layout_marginEnd="6dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userAltura"
                        android:drawableStart="@drawable/ic_import_export_black_24dp"
                        android:drawablePadding="12dp"
                        android:drawableTint="#6699ff"
                        style="@style/PerfilDados"
                        android:text="@string/Altura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPerfilAltura"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/black"
                        app:met_textColorHint="#FF353535"
                        android:layout_marginEnd="6dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userPeso"
                        android:drawableStart="@drawable/ic_local_pizza_black_24dp"
                        android:drawablePadding="12dp"
                        android:drawableTint="#6699ff"
                        style="@style/PerfilDados"
                        android:text="@string/Peso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPerfilPeso"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/black"
                        app:met_textColorHint="#FF353535"
                        android:layout_marginEnd="6dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userSexo"
                        android:drawableStart="@drawable/ic_change_history_black_24dp"
                        android:drawablePadding="12dp"
                        android:drawableTint="#6699ff"
                        style="@style/PerfilDados"
                        android:text="@string/Sexo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPerfilSexo"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/black"
                        app:met_textColorHint="#FF353535"
                        android:layout_marginEnd="6dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userOcupacao"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="12dp"
                        android:drawableTint="#6699ff"
                        style="@style/PerfilDados"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPerfilOcupacao"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/black"
                        app:met_textColorHint="#FF353535"
                        android:layout_marginEnd="6dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/userSituacao"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="12dp"
                        android:drawableTint="#6699ff"
                        style="@style/PerfilDados"
                        android:text="@string/Endividado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtPerfilSituacao"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:textColorHint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_baseColor="@android:color/black"
                        app:met_primaryColor="@android:color/black"
                        app:met_singleLineEllipsis="true"
                        app:met_underlineColor="@android:color/black"
                        app:met_textColorHint="#FF353535"
                        android:layout_marginEnd="6dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <info.hoang8f.widget.FButton
        android:id="@+id/btnLogOut"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Log Out"
        android:backgroundTint="@android:color/holo_purple"
        app:shadowEnabled="false"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:shadowColor="@android:color/black"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtPerfilUsername"
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnLogOut"
        android:layout_marginTop="104dp"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="12sp"
        app:met_baseColor="@android:color/black"
        app:met_primaryColor="@android:color/black"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="#FF353535"
        app:met_underlineColor="@android:color/black" />
</RelativeLayout>