<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#303030</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="colorAccent">#303030</item>
        <item name="backgroundcolor">#FAFAFA</item>
        <item name="cardbackgroundcolor">#ffffff</item>
        <item name="textcolor">#212121</item>
        <item name="tintcolor">#ce20bf</item>
        <!-- #FF80FCEB -->
        <item name="buttoncolor">#EA80FC</item>
        <item name="texthintcolor">#646464</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#35B2D1</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackgroundcolor">#424242</item>
        <item name="textcolor">#FAFAFA</item>
        <item name="tintcolor">#35B2D1</item>
        <item name="buttoncolor">#35B2D1</item>
        <item name="texthintcolor">#7b7b7b</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="PerfilDados">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">?attr/cardbackgroundcolor</item>
    </style>

</resources>
