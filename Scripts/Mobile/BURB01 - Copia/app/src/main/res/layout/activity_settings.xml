<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mathr.burb01.Home"
    android:background="?attr/backgroundcolor">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="?attr/backgroundcolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="?attr/textcolor"
                    android:text="@string/NightMode"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Switch
                    android:backgroundTint="#EA80FC"
                    android:id="@+id/switch_cor_app"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/Divider"/>

        <LinearLayout
            android:background="?attr/backgroundcolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textColor="?attr/textcolor"
                    android:textSize="18sp"
                    android:text="@string/Periodo"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/balancoPeriodoSpinner"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </Spinner>
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/Divider"/>

        <LinearLayout
            android:background="?attr/backgroundcolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/Info"
                    android:textColor="?attr/textcolor"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/infoActivity"
                    android:src="@drawable/ic_help_outline_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/Divider"/>

        <LinearLayout
            android:background="?attr/backgroundcolor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Perfil de Investidor"
                    android:textColor="?attr/textcolor"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/formInvest_Activity"
                    android:src="@drawable/ic_assignment_black_24dp"
                    android:tint="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/Divider"/>


        <View
            style="@style/Divider"/>

        <View
            style="@style/Divider"/>

        <View
            style="@style/Divider"/>



        <info.hoang8f.widget.FButton
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="56dp"
            android:text="@string/LogOut"
            android:backgroundTint="@android:color/holo_purple"
            android:textColor="@android:color/white"
            app:cornerRadius="0dp"
            app:shadowEnabled="false"
            />
    </LinearLayout>

</ScrollView>