<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context="com.example.mathr.burb01.Auth.SignIn"
    android:id="@+id/activitySignInLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activitySignInTxtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="46sp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/activityMainTxtEmail"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:text="Email ou nome de usuário"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="8dp"
            android:id="@+id/edtEmail"
            android:textSize="22sp"
            android:background="@drawable/caixa_de_texto"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="@android:color/white"/>
        <TextView
            android:id="@+id/activityMainTxtSenha"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Senha"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_marginTop="8dp"
            android:id="@+id/edtSenha"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:background="@drawable/caixa_de_texto"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="@android:color/white"/>


